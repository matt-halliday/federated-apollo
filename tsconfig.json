{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["ES2020"],
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "skipLibCheck": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "mapRoot": "./",
        "rootDir": "./",
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "exclude": ["**/node_modules"]
}
